<resources>
	<!-- Section about the quit menu -->
	<section name="menu-quit">
	
		<section name="dialog-panel">
			<sprite name="sprite-exit">
				<image file="dialogs/quit/dialog-exit.png" />
			</sprite>
			<sprite name="sprite-giveup">
				<image file="dialogs/quit/dialog-giveup.png" />
			</sprite>
			<sprite name="sprite-retry">
				<image file="dialogs/quit/dialog-retry.png" />
			</sprite>
			
			<integer name="top" value="100" />
			<integer name="left" value="150" />
		</section>
		
		
		<section name="dialog-yes">
			<sprite name="selected">
				<image file="dialogs/quit/yes-selected.png" />
				<image file="dialogs/quit/yes-unselected.png" />	
				<animation speed="75" />
			</sprite>
			<sprite name="unselected">
				<image file="dialogs/quit/yes-unselected.png" />
			</sprite>
			
			<integer name="top" value="300" />
			<integer name="left" value="230" />
			
		</section>

		<section name="dialog-no">
			<sprite name="selected">
				<image file="dialogs/quit/no-selected.png" />
				<image file="dialogs/quit/no-unselected.png" />
				<animation speed="75" />
			</sprite>
			<sprite name="unselected">
				<image file="dialogs/quit/no-unselected.png" />
			</sprite>
			
			<integer name="top" value="300" />
			<integer name="left" value="450" />
			
		</section>
  		
  </section>

</resources>
