<!--
	This file describes main graphics elements, such as game background, 
	area size and position, score font, progress-bar, etc...
-->
<resources>
	
	<!-- This logo is painted in Skin Selector Menu -->
	<surface name = "logo" file = "misc/logo.png"/>
	
	<!-- Zone top represents the zone where are the pieces you control -->
	<integer name = "zone_top" value = "110" />
	
	<!-- Coords for score displaying -->
	<integer name = "score_top" value = "50" />
	<integer name = "score_right" value = "750" />
	<integer name = "bonus_score_top" value = "150" />
	<integer name = "bonus_score_right" value ="750" />
	<integer name = "hight_score_top" value = "250" />
	<integer name = "hight_score_right" value ="750" />
	
	
	<!-- Coords of the game elements -->
	<section name = "game">
		<!-- Coords of the game area -->
		<integer name = "top" value = "231" />
		<integer name = "left" value = "245" />
		
		<!-- Coords of the two next pieces -->
		<integer name = "next_top" value = "38" />
		<integer name = "next_left" value = "375" />
	</section>
	
	<!-- Background image -->
	<surface name = "background" file = "misc/landscape.png"/>
	
	<!-- Game over message -->
	<section name = "gameover">
		<surface name = "surface" file = "misc/gameover.png" />
		<integer name = "panel_left" value = "150" />
		<integer name = "panel_top" value = "145" />
		<integer name = "score_left" value = "400" />
		<integer name = "score_top" value = "270" />
	</section>
	
	<!-- Progress Bar - show how far as best score you are ! -->
	<section name="progress_bar">
		<!-- Left coordinate -->
		<integer name="left" value="669" />
		
		<!-- Head element -->
		<section name = "head">
			<!-- Top coordinate -->
			<integer name="top" value="305" />
			
			
			<!-- Head sprite when you have not exceed best score -->
			<sprite name="sprite">
				<image file="misc/bar-head.png" />
			</sprite>
			
			<!-- Head sprite when you have exceed best score (congratulations!) -->
			<sprite name="sprite_ok">
				<image file="misc/bar-head-ok.png" />
			</sprite>
			
		</section>
		
		<!-- Foot element -->
		<section name="foot">
			<!-- Coord -->
			<integer name="top" value="515" />
			
			<!-- Sprite -->
			<sprite name="sprite">
				<image file="misc/bar-foot.png" />
			</sprite>
			
		</section>
		
		<!-- An item is a 1 pixel height sprite to draw the progress bar's content -->
		<section name="item">
			
			<!-- Sprite of normal item -->
			<sprite name="sprite">
				<image file="misc/bar-item.png" />
			</sprite>
			
			<!-- Sprite of a winned item -->
			<sprite name="sprite_ok">
				<image file="misc/bar-item-ok.png" />
			</sprite>
		</section>
		
		
	</section>
	
	<!-- Font sprites to display score -->
	<sprite name="font_glyph">
		<image file="misc/font.png">
			<grid pos="1,0" size="14,40" />
		</image>
		<image file="misc/font.png">
			<grid pos="16,0" size="14,40" />
		</image>
		<image file="misc/font.png">
			<grid pos="31,0" size="14,40" />
		</image>
		<image file="misc/font.png">
			<grid pos="46,0" size="14,40" />
		</image>
		<image file="misc/font.png">
			<grid pos="61,0" size="14,40" />
		</image>
		<image file="misc/font.png">
			<grid pos="76,0" size="14,40" />
		</image>
		<image file="misc/font.png">
			<grid pos="92,0" size="14,40" />
		</image>
		<image file="misc/font.png">
			<grid pos="107,0" size="14,40" />
		</image>
		<image file="misc/font.png">
			<grid pos="121,0" size="14,40" />
		</image>
		<image file="misc/font.png">
			<grid pos="136,0" size="14,40" />
		</image>
		<image file="misc/font.png">
			<grid pos="150,0" size="14,40" />
		</image>
	</sprite>
	
	<!-- Main font description -->
	<font name="font">
		<bitmap glyphs="font_glyph" letters="0123456789." spacelen="35"  />
	</font>
	
	
</resources>
