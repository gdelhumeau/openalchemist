<!--
    This file describes Game Over Menu
-->
<resources>
	
	<!-- Main section -->
	<section name="menu_gameover">
		
		<!-- Dialog is the background frame menu -->
		<sprite name="dialog_gameover">
			<image file="dialogs/gameover/dialog-gameover.png">
				<grid pos="0,0" size="500,500" />
			</image>
		</sprite>
		
		<sprite name="dialog_highscore">
			<image file="dialogs/gameover/dialog-highscore.png">
				<grid pos="0,0" size="500,500" />
			</image>
		</sprite>
		
		<!-- Coords -->
		<integer name = "dialog_left" value = "165" />
		<integer name = "dialog_top" value = "45" />
		<integer name = "score1_left" value = "400" />
		<integer name = "score1_top" value = "167" />
		<integer name = "score2_left" value = "400" />
		<integer name = "score2_top" value = "267" />
		
		<!-- Start a new game question -->
		<section name="new_game_question">
		
			<!-- Yes answer -->
			<section name="yes">
			
				<sprite name="unselected">
					<image file="dialogs/gameover/yes-unselected.png">
						<grid pos="0,0" size="100,100" />
					</image>
				</sprite>
				
				<sprite name="selected">
					<image file="dialogs/gameover/yes-selected.png">
						<grid pos="0,0" size="100,100" />
					</image>
				</sprite>
				
				<integer name = "left" value = "250" />
				<integer name = "top" value = "400" />
				
			</section>
			
			<!-- No answer -->
			<section name="no">
			
				<sprite name="unselected">
					<image file="dialogs/gameover/no-unselected.png">
						<grid pos="0,0" size="100,100" />
					</image>
				</sprite>
				
				<sprite name="selected">
					<image file="dialogs/gameover/no-selected.png">
						<grid pos="0,0" size="100,100" />
					</image>
				</sprite>
				
				<integer name = "left" value = "450" />
				<integer name = "top" value = "400" />
				
			</section>
			
			
		</section>
		 
		
	</section>
</resources>
