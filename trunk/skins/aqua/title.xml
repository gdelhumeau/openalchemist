<!--
	This file describes Title state, when a presentation is displayed with a 
	demo player
-->
<resources>
	
	<!-- Main section -->
	<section name="title">
		
		<!-- Start message, to tell the user how begin a new game -->
		<section name = "start_message">
			<!-- Coords -->			
			<integer name = "top" value = "450" />
			<integer name = "left" value = "190" />
			
			<!-- Sprite -->
			<sprite name = "sprite">
				<!-- first frame -->
				<image file="dialogs/title/start_message.png">
					<grid pos="0,0" size="420,80" />
				</image>
				<!-- second frame -->
				<image file="dialogs/title/start_message.png">
					<grid pos="0,0" size="0,0" />
				</image>
				
				<!-- animation speed -->
				<animation speed="900" />
			</sprite>
		</section>
		
		<!-- Key demo sprites, to explain to the user which keys they will use -->
		<section name="keydemo">
			
			<!-- Left key -->
			<sprite name = "left">
				<image file="dialogs/title/key-left.png">
					<grid pos="0,0" size="50,50" />
					<grid pos="50,0" size="50,50" />
				</image>
				<animation speed="200" />
			</sprite>
			
			<!-- Up key -->
			<sprite name = "up">
				<image file="dialogs/title/key-up.png" >
					<grid pos="0,0" size="50,50" />
					<grid pos="50,0" size="50,50" />
				</image>
				<animation speed="200" />
			</sprite>
			
			<!-- Right key -->
			<sprite name = "right">
				<image file="dialogs/title/key-right.png">
					<grid pos="0,0" size="50,50" />
					<grid pos="50,0" size="50,50" />
				</image>
				<animation speed="200" />
			</sprite>
			
			<!-- Down key -->
			<sprite name = "down">
				<image file="dialogs/title/key-down.png">
					<grid pos="0,0" size="50,50" />
					<grid pos="50,0" size="50,50" />
				</image>
				<animation speed="200" />
			</sprite>
			
			<!-- Escape key -->		
			<sprite name = "escape">
				<image file="dialogs/title/key-escape.png">
					<grid pos="0,0" size="50,50" />
					<grid pos="50,0" size="50,50" />
				</image>
				<animation speed="200" />
			</sprite>
			
			<!-- Options key -->		
			<sprite name = "options">
				<image file="dialogs/title/key-options.png">
					<grid pos="0,0" size="50,50" />
					<grid pos="50,0" size="50,50" />
				</image>
				<animation speed="200" />
			</sprite>
			
		</section>
		
		<!-- Help section, display a help tutorial -->
		<section name="help">
			<!-- Now, we will write each sentence -->
			
			<!-- Welcome to OpenAlchemist ! -->
			<section name="1">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/01.png" />
				</sprite>
				<integer name = "top"  value = "250"  />
				<integer name = "left" value = "170"   />
				<integer name = "time" value = "5000" />
			</section>
			
			<!-- This is your pieces -->
			<section name="2">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/02.png" />
				</sprite>
				<integer name = "top"  value = "100"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- You can move them to the left... -->
			<section name="3">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/03.png" />
				</sprite>
				<integer name = "top"  value = "230"  />
				<integer name = "left" value = "190"  />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...or to the right ! -->
			<section name="4">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/04.png" />
				</sprite>
				<integer name = "top"  value = "230"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- You can also rotate pieces... -->
			<section name="5">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/05.png" />
				</sprite>
				<integer name = "top"  value = "230"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...and make them fall ! -->
			<section name="6">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/06.png" />
				</sprite>
				<integer name = "top"  value = "230"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- Select the position... -->
			<section name="7">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/07.png" />
				</sprite>
				<integer name = "top"  value = "100"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...and fall ! -->
			<section name="8">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/08.png" />
				</sprite>
				<integer name = "top"  value = "100"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- When you have more than 3 same items... -->
			<section name="9">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/09.png" />
				</sprite>
				<integer name = "top"  value = "230"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...they're destroyed... -->
			<section name="10">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/10.png" />
				</sprite>
				<integer name = "top"  value = "230"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...and a new one is created ! -->
			<section name="11">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/11.png" />
				</sprite>
				<integer name = "top"  value = "230"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- Align more than 3 items and you get bonus ! -->
			<section name="12">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/12.png" />
				</sprite>
				<integer name = "top"  value = "230"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			
			<!-- You can also open the game menu... -->
			<section name="13">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/13.png" />
				</sprite>
				<integer name = "top"  value = "230"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...or the options menu ! -->
			<section name="14">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/14.png" />
				</sprite>
				<integer name = "top"  value = "230"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- Now you know everything... -->
			<section name="15">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/15.png" />
				</sprite>
				<integer name = "top"  value = "230"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...so start a new game and have fun ! -->
			<section name="16">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/16.png" />
				</sprite>
				<integer name = "top"  value = "230"  />
				<integer name = "left" value = "190"   />
				<integer name = "time" value = "6000" />
			</section>
				
		</section>
		
	</section>
</resources>

